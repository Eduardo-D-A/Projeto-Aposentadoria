<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_marginTop="18dp"
        android:id="@+id/spinner"
        android:autofillHints="gender"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:hint="Digite sua idade"
        android:textColor="@color/black"
        android:maxLength="3"
        android:inputType="number"
        android:digits="0123456789"
        android:textSize="18sp"
        android:id="@+id/edittext_idade"
        android:gravity="center_horizontal" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Calcular"
        android:backgroundTint="#730B8C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="8dp"
        app:icon="@drawable/baseline_calculate_24"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        android:id="@+id/button_mostrar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_mensagem"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textSize="18sp"
        android:backgroundTint="#B6B6B6"
        android:padding="8dp"
        android:gravity="center_horizontal"
        tools:text="teste"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meunome"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Aluno: Eduardo Dias Amaral."
        android:textColor="#000000"
        android:textSize="18sp"
        android:backgroundTint="#B6B6B6"
        android:padding="8dp"
        android:gravity="center_horizontal"
        />

</LinearLayout>